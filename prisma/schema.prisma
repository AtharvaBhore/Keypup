generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  email             String   @unique
  image             String?
  password          String?
  googleId          String?
  allResults        Json     @default("[]")
  recentResult      Json     @default("[]")
  multiplayerResults Json     @default("{\"wins\": 0, \"losses\": 0, \"averageWPM\": 0}")
}

model OTP {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  otp      String
  email    String   @unique
  expiry   DateTime?
  attempts Int?
}

model Leaderboard {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  mode        String   @default("words") 
  topResults  Json     @default("[]")
}
